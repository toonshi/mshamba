type CreateTokenParams = record {
  token_name : text;
  token_symbol : text;
  token_logo : opt text;
  decimals : nat8;
  total_supply : nat;
  transfer_fee : nat;
  minting_account_owner : principal;
  platform_principal : principal;
  ifo_escrow_principal : principal;
  farm_treasury_principal : principal;
};

service : {
  create_farm_token : (CreateTokenParams) -> (variant { Ok : principal; Err : text });
}
